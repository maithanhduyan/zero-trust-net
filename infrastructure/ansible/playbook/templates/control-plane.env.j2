# {{ ansible_managed }}
# Control Plane Environment Configuration

# Database
DATABASE_URL=sqlite:///./zerotrust.db
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/zerotrust

# Network Configuration
OVERLAY_NETWORK=10.0.0.0/24
HUB_OVERLAY_IP=10.0.0.1

# Hub WireGuard Configuration
HUB_PUBLIC_KEY={{ hub_public_key }}
HUB_ENDPOINT={{ ansible_host }}:{{ wireguard_port }}

# Security
ADMIN_SECRET={{ lookup('env', 'ADMIN_SECRET') | default('change-me-in-production') }}
AUTO_APPROVE_ALL=false

# Logging
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000
