# Hub Agent Configuration
# Generated by Ansible

# Control Plane WebSocket URL
CONTROL_PLANE_URL={{ control_plane_url }}

# API Key for authentication
HUB_API_KEY={{ hub_agent_api_key.stdout }}

# WireGuard interface name
WIREGUARD_INTERFACE={{ wireguard_interface }}

# WireGuard config directory
WIREGUARD_CONFIG_DIR={{ wireguard_config_dir }}

# Status report interval (seconds)
STATUS_INTERVAL={{ status_report_interval }}

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL={{ log_level }}

# Log file path
LOG_FILE=/var/log/hub-agent.log
